<Window x:Class="Milestone_2.AccountConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone_2"
        mc:Ignorable="d"
        Title="AccountConfirm" Height="100" Width="250" ResizeMode="NoResize">
    <Grid Background="#FF7A7A7A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="ConfirmTextBox" Margin="10,0,10.2,10.4" TextWrapping="Wrap" Text="TextBox" Height="42" VerticalAlignment="Bottom" Grid.ColumnSpan="2" Background="#FFA6A6A6" FontSize="24" TextAlignment="Center" Foreground="#FFBD0000"/>

    </Grid>
</Window>
